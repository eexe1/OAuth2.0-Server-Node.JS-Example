<!DOCTYPE html>
<html>

<head>
  <title>OAuth2 Register</title>
  <!-- Needed for mobile sites to work -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Style sheets -->
  <link rel="stylesheet" type="text/css" href="stylesheets/pure-min.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/base.css">
  <link rel="stylesheet" type="text/css" href="stylesheets/sign-in-modules.css">
</head>
<body>

<!-- HTML login screen form -->
<form action="/register" method="post" class="pure-form pure-form-stacked">
  <fieldset>
    <!-- Upper box with Title, username, and password -->
    <div class="upper-box">
      <!-- Title -->
      <div>
        <h1 class="title-padding">Sign up</h1>
      </div>
      <div class="pure-control-group">
        <!-- Username label and input -->
        <label class="labels" for="username">Username:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="username" type="text" name="username"/>
        </div>
      </div>
      <div class="pure-control-group">
        <!-- Username label and input -->
        <label class="labels" for="name">Name:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="name" type="text" name="name"/>
        </div>
      </div>
      <div class="pure-control-group">
        <!-- Password label and input -->
        <label class="labels" for="email">Email:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="email" type="email"
                 name="email"/>
        </div>
      </div>
      <div class="pure-control-group">
        <!-- Password label and input -->
        <label class="labels" for="password">Password:</label>

        <div class="input-fields">
          <input class="pure-input-1 input-fields" id="password" type="password"
                 name="password"/>
        </div>
      </div>
    </div>
    <!-- Bottom box with Sign in -->
    <div class="bottom-box">
      <div class="pure-controls sign-in-button">
        <a href="/login" class="pure-button pure-button-primary" style="float:left;">Sign in</a>
        <button type="submit" value="Submit" class="pure-button pure-button-primary">Sign up</button>
      </div>
    </div>
  </fieldset>
  <div class="from-text">
    <div>
      From Platypus
    </div>
  </div>
</form>

</body>
</html>
